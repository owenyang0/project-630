.header
  position: absolute
  top: 0
  left: 0
  right: 0
  z-index: 10

.site-nav__list
  margin: 0;
  list-style: none;



.site-nav__item
  padding: 0 20px;
  position: relative;

  &:hover
    background-color: #3C67B3

  .avatar
    width: 40px
    border-radius: 50%

  a
    display: block
    font-size: 14px
    line-height: 50px
    color: #fff
    text-decoration: none

.logo,
.site-nav,
.site-nav__item
  display: inline-block;

.site-nav
  width: 100%
  text-align: center

.logo h1
  font-weight: 400;

.site-nav__item--search
  padding: 0
  margin: 0 20px

