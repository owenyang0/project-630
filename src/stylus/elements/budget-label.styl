$budget-label-font-size = 14px;

.budget-label {
  display: inline-block;
  width: 200px;
  text-align: center;
  &.budget-label--highlight {
    .budget-label__value {
      color: greenyellow;
    }
  }
}

.budget-label__label {
  display: block;
  font-size: $budget-label-font-size;
}

.budget-label__value {
  display: block;
  font-size: $budget-label-font-size * 2.5;
}
