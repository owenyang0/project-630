*
  box-sizing: border-box;

.container
  max-width: 1440px;
  overflow: hidden;
  margin: 0 auto;

body
  background-color: #eee
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;

.page__body
  padding: 20px 10px;

/* -- LINKS -- */
a:link {
  color: #999999;
  text-decoration: none;
  border: none;
  outline: none;
  transition:.3s;
  -o-transition:.3s;
  -ms-transition:.3s;
  -moz-transition:.3s;
  -webkit-transition:.3s;
}
a:hover {
  color: #999999;
  text-decoration: none;
  border: none;
  outline: none;
  transition:.3s;
  -o-transition:.3s;
  -ms-transition:.3s;
  -moz-transition:.3s;
  -webkit-transition:.3s;
}
a:visited {
  color: #999999;
  text-decoration: none;
  border: none;
  outline: none;
}
a img {
  border: none;
  outline: none;
}


/* -- BUTTONS -- */

.red-button,
a.red-button {
  display: inline-block;
  width: 300px;
  padding: 30px 10px;
  background: #c52f31;
  border-bottom: solid 6px #b52b2c;
  color: #fff;
  font-family: 'proxima-nova', sans-serif;
  font-weight: bold;
  font-size: 16px;
  line-height: 18px;
  text-align: center;
  text-transform: uppercase;

  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}
.red-button:hover {
  background: #b52b2c;
}
.red-button-arrow,
a.red-button-arrow {
  display: inline-block;
  width: 255px;
  padding: 25px 72px 25px 10px;
  position: relative;
  background: #c52f31;
  border-bottom: solid 6px #b52b2c;
  color: #fff;
  font-family: 'proxima-nova', sans-serif;
  font-weight: bold;
  font-size: 14px;
  line-height: 14px;
  text-align: center;
  text-transform: uppercase;

  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}
.red-button-arrow-left,
a.red-button-arrow-left {
  display: inline-block;
  width: 255px;
  padding: 25px 10px 25px 72px;
  position: relative;
  background: #c52f31;
  border-bottom: solid 6px #b52b2c;
  color: #fff;
  font-family: 'proxima-nova', sans-serif;
  font-weight: bold;
  font-size: 14px;
  line-height: 14px;
  text-align: center;
  text-transform: uppercase;

  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}

.red-button-arrow-left:hover,
.red-button-arrow:hover {
  background: #b52b2c;
}
.red-button-arrow::after {
  content: "";
  position: absolute;
  right: 0;
  top: 0;
  background: #b52b2c url('../images/button-chevron.png') no-repeat center center;
  width: 62px;
  height: 64px;

  -webkit-border-radius: 0px;
  -webkit-border-top-right-radius: 5px;
  -moz-border-radius: 0px;
  -moz-border-radius-topright: 5px;
  border-radius: 0px;
  border-top-right-radius: 5px;
}

.red-button-arrow-left::before
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  background: #b52b2c url('../images/button-chevron-left.png') no-repeat center center;
  width: 62px;
  height: 64px;

  -webkit-border-radius: 0px;
  -webkit-border-top-right-radius: 5px;
  -moz-border-radius: 0px;
  -moz-border-radius-topleft: 5px;
  border-radius: 0px;
  border-top-left-radius: 5px;

.white-button-arrow,
a.white-button-arrow {
  display: inline-block;
  width: 255px;
  padding: 25px 72px 25px 10px;
  position: relative;
  background: #fff;
  border-bottom: solid 6px #dedede;
  color: #c43436;
  font-family: 'proxima-nova', sans-serif;
  font-weight: bold;
  font-size: 14px;
  line-height: 14px;
  text-align: center;
  text-transform: uppercase;

  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}
.white-button-arrow:hover {
  background: #dedede;
}
.white-button-arrow::after {
  content: "";
  position: absolute;
  right: 0;
  top: 0;
  background: #dedede url('../images/button-chevron-red.png') no-repeat center center;
  width: 62px;
  height: 64px;

  -webkit-border-radius: 0px;
  -webkit-border-top-right-radius: 5px;
  -moz-border-radius: 0px;
  -moz-border-radius-topright: 5px;
  border-radius: 0px;
  border-top-right-radius: 5px;
}
@media (max-width: 1500px) {
  .red-button,
  a.red-button {
    width: 240px;
    padding: 20px 8px;
    font-size: 12px;
    line-height: 12px;
  }
  .red-button-arrow,
  a.red-button-arrow {
    width: 240px;
    padding: 22px 64px 22px 8px;
    font-size: 12px;
    line-height: 12px;
  }
  .red-button-arrow-left,
  a.red-button-arrow-left {
    width: 240px;
    padding: 22px 8px 22px 64px;
    font-size: 12px;
    line-height: 12px;
  }
  .red-button-arrow::after {
    width: 56px;
    height: 58px;
  }
  .red-button-arrow-left::before {
    width: 56px;
    height: 58px;
  }
  .white-button-arrow,
  a.white-button-arrow {
    width: 240px;
    padding: 22px 64px 22px 8px;
    font-size: 12px;
    line-height: 12px;
  }
  .white-button-arrow::after {
    width: 56px;
    height: 58px;
  }
}
@media (max-width: 1370px) {
  .red-button,
  a.red-button {
    width: 220px;
    padding: 20px 8px;
    font-size: 12px;
    line-height: 12px;
  }
  .red-button-arrow,
  a.red-button-arrow {
    width: 220px;
    padding: 20px 60px 20px 8px;
    font-size: 12px;
    line-height: 12px;
  }
  .red-button-arrow::after {
    width: 52px;
    height: 54px;
  }
  .red-button-arrow-left,
  a.red-button-arrow-left {
    width: 220px;
    padding: 20px 8px 20px 60px;
    font-size: 12px;
    line-height: 12px;
  }
  .red-button-arrow-left::before {
    width: 52px;
    height: 54px;
  }
  .white-button-arrow,
  a.white-button-arrow {
    width: 220px;
    padding: 20px 60px 20px 8px;
    font-size: 12px;
    line-height: 12px;
  }
  .white-button-arrow::after {
    width: 52px;
    height: 54px;
  }
}
